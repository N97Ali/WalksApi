@model NZWalksUi.Models.AddRegionsViewModel
<h1 class = "mt-3"> 
    Add Regions
</h1>
<form  method = "post"> 
   <div  class = "mt-3">
       <label class = "form-control">Code</label>
       <input type="text" class = "form-control" asp-for="Code"/>
   </div>
   <div  class = "mt-3">
       <label class = "form-control">Name</label>
       <input type="text" class = "form-control" asp-for="Name" />
   </div>

   <div  class = "mt-3">
       <label class = "form-control">ImageUrl</label>
        <input type="text" class="form-control" asp-for="RegionImageUrl" />
   </div>
   <div class = "mt-3">
       <button type = "submit" class ="btn btn-primary">Save</button>
   </div>
</form>